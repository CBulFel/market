<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.taoe.MainActivity" >

    <Button
        android:id="@+id/myadd"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/addbutton"
        android:text="+"
        android:textColor="#000000"
        android:textSize="50dp" />

    <Gallery
        android:id="@+id/mygallery"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_toRightOf="@+id/myadd"
        android:scrollbars="horizontal"
        android:spacing="4dp" />

    <LinearLayout
        android:id="@+id/myli"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/myadd"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext"
            android:hint="给您的宝贝编个标题" />

        <EditText
            android:id="@+id/context"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext"
            android:hint="描述下您的宝贝" />

        <EditText
            android:id="@+id/originalcost"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext"
            android:hint="原价" />

        <EditText
            android:id="@+id/nowcost"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext"
            android:hint="现价" />
    </LinearLayout>

    <Spinner
        android:id="@+id/myspin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/myli"
        android:layout_marginTop="4dp"
        android:entries="@array/classout" />

    <Button
        android:id="@+id/setbu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/tab_sale"
        android:text="发布宝贝" />

</RelativeLayout>